function Show-LoginWindow {

    [string]$xamlString = @'
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Access Control" Height="250" Width="400" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent" ResizeMode="NoResize">
    <Border Background="#2E3338" CornerRadius="10" BorderBrush="#545D6A" BorderThickness="1">
        <Grid>
            <TextBlock Text="Deployment Tool Login" Foreground="White" FontSize="16" FontWeight="Bold" Margin="15,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <StackPanel VerticalAlignment="Center" Margin="20,50,20,20">
                <TextBlock Text="Enter Access Password:" Foreground="#CCCCCC" FontSize="14" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Height="30" FontSize="14" Background="#3C424A" Foreground="White" BorderBrush="#545D6A" Padding="5"/>
                <TextBlock x:Name="StatusText" Foreground="#FF6347" Margin="0,10,0,0" TextAlignment="Center" MinHeight="20"/>
            </StackPanel>
            <Button x:Name="LoginButton" Content="Continue" Margin="0,0,20,20" Height="40" Width="120" Background="#007ACC" Foreground="White" FontSize="16" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        </Grid>
    </Border>
</Window>
'@

    $window = Load-WpfWindow $xamlString
    $passwordBox = $window.FindName("PasswordBox"); $loginButton = $window.FindName("LoginButton"); $statusText = $window.FindName("StatusText")

    if (-not (Test-Path $ConfigFilePath)) { [System.Windows.MessageBox]::Show("Config file not found.","Error",[System.Windows.MessageBoxButton]::OK,[System.Windows.MessageBoxImage]::Error); return "Exit" }
    $config = Load-ConfigFile -Path $ConfigFilePath
    if (-not $config) { [System.Windows.MessageBox]::Show("Config file invalid or empty.","Error",[System.Windows.MessageBoxButton]::OK,[System.Windows.MessageBoxImage]::Error); return "Exit" }

    # Helper: robust download with fallbacks
    function Get-RemoteString {
        param([string]$url, [int]$timeoutSec = 15)
        $lastError = $null
        $origCallback = $null
        try {
            # Force TLS1.2
            [Net.ServicePointManager]::SecurityProtocol = [Net.SecurityProtocolType]::Tls12
            # Optionally bypass cert validation in Hiren's / WinPE controlled env (restore later)
            $origCallback = [System.Net.ServicePointManager]::ServerCertificateValidationCallback
            [System.Net.ServicePointManager]::ServerCertificateValidationCallback = { return $true }

            # 1) Try Invoke-WebRequest
            try {
                $resp = Invoke-WebRequest -Uri $url -UseBasicParsing -TimeoutSec $timeoutSec -ErrorAction Stop
                if ($resp.Content) { return $resp.Content.Trim() }
            } catch { $lastError = $_ }

            # 2) Try WebClient
            try {
                $wc = New-Object System.Net.WebClient
                $wc.Headers["User-Agent"] = "DeploymentTool/1.0"
                $s = $wc.DownloadString($url)
                if ($s) { return $s.Trim() }
            } catch { $lastError = $_ }

            # 3) Try Bits transfer (if available)
            try {
                $tmp = Join-Path $env:TEMP ("pwdlkp_" + [guid]::NewGuid().ToString() + ".txt")
                Start-BitsTransfer -Source $url -Destination $tmp -ErrorAction Stop
                if (Test-Path $tmp) { $c = Get-Content $tmp -Raw; Remove-Item $tmp -Force -ErrorAction SilentlyContinue; if ($c) { return $c.Trim() } }
            } catch { $lastError = $_ }

            # 4) Try curl.exe if present
            try {
                $curl = (Get-Command curl -ErrorAction SilentlyContinue)
                if ($curl) {
                    $tmp = Join-Path $env:TEMP ("pwdlkp_" + [guid]::NewGuid().ToString() + ".txt")
                    & curl -s -L --max-time $timeoutSec $url | Out-File -Encoding utf8 $tmp
                    if (Test-Path $tmp) { $c = Get-Content $tmp -Raw; Remove-Item $tmp -Force -ErrorAction SilentlyContinue; if ($c) { return $c.Trim() } }
                }
            } catch { $lastError = $_ }

        } catch {
            # ignore
        } finally {
            # restore callback
            try { if ($origCallback -ne $null) { [System.Net.ServicePointManager]::ServerCertificateValidationCallback = $origCallback } else { [System.Net.ServicePointManager]::ServerCertificateValidationCallback = $null } } catch {}
        }
        return $null
    }

    $loginButton.add_Click({

        $enteredPassword = $passwordBox.Password; $decryptedAdminPass = Decrypt-String $config.SuperAdminPass

        # Quick local check
        if ($enteredPassword -eq $decryptedAdminPass) { $window.Tag = "SuperAdmin"; $window.Close(); return }

        if ([string]::IsNullOrEmpty($enteredPassword)) {
            $Global:EmergencyCounter++; $statusText.Text = "Password required. Attempt ($($Global:EmergencyCounter)/5)"
            if ($Global:EmergencyCounter -ge 5) { try { $webhookUrl = Decrypt-String $config.WebhookUrl; if ($webhookUrl) { Invoke-WebRequest -Uri $webhookUrl -Method Post -Body "RECOVERY: $decryptedAdminPass" -ErrorAction SilentlyContinue } } catch {}; $window.Tag = "Exit"; $window.Close() }
            return
        }

        $statusText.Text = "Verifying..."; $window.Dispatcher.Invoke([action]{}, [System.Windows.Threading.DispatcherPriority]::Render)

        # Detect WinPE/Hiren's (best-effort)
        $inWinPE = $false
        try {
            if ((Test-Path HKLM:\SYSTEM\CurrentControlSet\Control\MiniNT) -or ($env:OS -eq $null)) { $inWinPE = $true }
        } catch {}

        # Attempt to fetch remote password (if DriveUrl present)
        if ($config.DriveUrl -and -not $Global:OfflineMode) {
            $statusText.Text = "Fetching remote password..."
            $window.Dispatcher.Invoke([action]{}, [System.Windows.Threading.DispatcherPriority]::Render)
            $passwordUrl = Decrypt-String $config.DriveUrl
            $remoteContent = $null
            try {
                $remoteContent = Get-RemoteString -url $passwordUrl -timeoutSec 20
            } catch { $remoteContent = $null }

            if (-not $remoteContent) {
                # try http fallback if url was https
                if ($passwordUrl -and $passwordUrl.StartsWith("https://")) {
                    $fallback = $passwordUrl -replace '^https','http'
                    try { $remoteContent = Get-RemoteString -url $fallback -timeoutSec 15 } catch {}
                }
            }

            if ($remoteContent) {
                try {
                    $decryptedRemote = Decrypt-String $remoteContent
                    if ($enteredPassword -eq $decryptedRemote) { $window.Tag = "User"; $window.Close(); return }
                    else { $statusText.Text = "Incorrect password." ; return }
                } catch { $statusText.Text = "Error decrypting remote password." ; return }
            } else {
                # In Hiren's we try to be explicit about network state
                if ($inWinPE) {
                    if (-not (Test-Connection -ComputerName "8.8.8.8" -Count 1 -Quiet)) {
                        $statusText.Text = "No network. Ensure NIC drivers loaded."
                        return
                    } else {
                        $statusText.Text = "Remote fetch failed. Check URL or allow insecure SSL."
                        return
                    }
                } else {
                    $statusText.Text = "Error fetching password."
                    return
                }
            }
        } else {
            # Offline mode or no DriveUrl -> allow local user (but not superadmin)
            if ($Global:OfflineMode) { $window.Tag = "User"; $window.Close(); return } 
            $statusText.Text = "Offline mode not enabled and no remote URL configured."
        }

    })

    $window.ShowDialog() | Out-Null; return $window.Tag

}
.
